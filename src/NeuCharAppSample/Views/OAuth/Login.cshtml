@using Senparc.CO2NET
@using Senparc.CO2NET.Extensions
@model Senparc.Weixin.MP.AdvancedAPIs.User.UserInfoJson

<div class="box box-primary">
    <div class="box-body box-profile">
        <img class="profile-user-img img-responsive img-circle" src="@Model.headimgurl" alt="头像">

        <h3 class="profile-username text-center">@Model.nickname</h3>

        <p class="text-muted text-center">登陆Neuchar App管理后台</p>

        <ul class="list-group list-group-unbordered">
            <li class="list-group-item">
                <b>性别</b> <a class="pull-right">@((Sex)Model.sex)</a>
            </li>
            <li class="list-group-item">
                <b>地址</b> <a class="pull-right">@Model.country @Model.province @Model.city</a>
            </li>
            <li class="list-group-item">
                <b>OpenId</b> <a class="pull-right">@Model.openid</a>
            </li>
            <li class="list-group-item">
                <b>微信OAuth地址</b> <a class="pull-right"><span>@Url.Action("Index",new{appCode=TempData["AppCode"]})</span></a>
            </li>
        </ul>
        <a asp-action="Index" asp-route-appCode="@TempData["AppCode"]" class="btn btn-primary btn-block">
            <b>测试OAuth授权【需要在微信中测试】</b>
        </a>
    </div>
</div>
